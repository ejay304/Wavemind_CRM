<h2>Ajouter un contact</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%= f.label :nom %><br>
    <%= f.text_field :name, :autofocus => true %>
  </div>
  <div class="field">
    <%= f.label :prenom %><br>
    <%= f.text_field :firstname %>
  </div>

  <div class="field">
  	<%= f.label :email %><br />
  	<%= f.email_field :email%>
  </div>

  <div class="field">
  	<%= f.label :mot_de_passe %><br />
  	<%= f.password_field :password %>
  </div>

  <div class="field">
  	<%= f.label :confirmation_du_mot_de_passe %><br />
  	<%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label :telephone %><br>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :fax %><br>
    <%= f.text_field :fax %>
  </div>
  <div class="field">
    <%= f.label :poste %><br>
    <%= f.text_field :function %>
  </div>
   <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :npa %><br>
    <%= f.text_field :zip %>
  </div>
  <div class="field">
    <%= f.label :ville %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :pays %><br>
    <%= f.text_field :country %>
  </div>

  <div><%= f.submit "Ajouter" %></div>
<% end %>

<%= render "devise/shared/links" %>
