  <header class="panel-heading">
    Liste des projects
  </header>
  <table class="table table-hover table-striped">
    <thead>
        <tr>
          <th>Nom</th>
          <th>Date</th>
          <th>Responsable</th>
          <th>Ref</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @projects.each do |project| %>
        <tr>
          <td><%= project.name %></td>
          <td><%= project.date %></td>
          <td><%= project.responsible.full_name %></td>
          <td><%= project.ref %></td>
          <td><%= link_to 'Voir', project %></td>
          <td><%= link_to 'Modifier', edit_project_path(project) %></td>
          <td><%= link_to 'Supprimer', project, method: :delete, data: { confirm: 'Etes vous sÃ»r ?' } %></td>
        </tr>
        <% end %>
